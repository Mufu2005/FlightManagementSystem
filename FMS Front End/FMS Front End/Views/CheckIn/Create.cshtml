@model FMS_Front_End.Models.CheckIn

<h2>Create Check-In</h2>

<form asp-action="Create" method="post">
	<div class="form-group">
		<label>Booking ID</label>
		<input class="form-control" asp-for="BookingId" />
	</div>
	<div class="form-group">
		<label>Check-In Time</label>
		<input type="datetime-local" class="form-control" asp-for="CheckInTime" />
	</div>
	<div class="form-group">
		<label>Seat Number</label>
		<input class="form-control" asp-for="SeatNumber" />
	</div>
	<div class="form-group">
		<label>Boarded</label>
		<input type="checkbox" asp-for="IsBoarded" />
	</div>
	<button type="submit" class="btn btn-success mt-2">Submit</button>
</form>