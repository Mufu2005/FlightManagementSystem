@model FMS_Front_End.Models.Flight

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Flight</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="FlightNumber" class="form-label">Flight Number</label>
                            <input asp-for="FlightNumber" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Source" class="form-label">Source</label>
                            <input asp-for="Source" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Destination" class="form-label">Destination</label>
                            <input asp-for="Destination" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DepartureTime" class="form-label">Departure Time</label>
                            <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ArrivalTime" class="form-label">Arrival Time</label>
                            <input asp-for="ArrivalTime" type="datetime-local" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="SeatsAvailable" class="form-label">Seats Available</label>
                            <input asp-for="SeatsAvailable" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
