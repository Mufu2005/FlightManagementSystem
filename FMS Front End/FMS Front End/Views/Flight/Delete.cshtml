@model FMS_Front_End.Models.Flight

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card shadow rounded">
				<div class="card-header bg-danger text-white">
					<h4 class="mb-0">Delete Flight</h4>
				</div>
				<div class="card-body">
					<h5 class="text-danger mb-4">Are you sure you want to delete this flight?</h5>
                    
					<dl class="row">
						<dt class="col-sm-4 fw-bold">Flight Number</dt>
						<dd class="col-sm-8">@Model.FlightNumber</dd>

						<dt class="col-sm-4 fw-bold">Source</dt>
						<dd class="col-sm-8">@Model.Source</dd>

						<dt class="col-sm-4 fw-bold">Destination</dt>
						<dd class="col-sm-8">@Model.Destination</dd>

						<dt class="col-sm-4 fw-bold">Departure Time</dt>
						<dd class="col-sm-8">@Model.DepartureTime</dd>

						<dt class="col-sm-4 fw-bold">Arrival Time</dt>
						<dd class="col-sm-8">@Model.ArrivalTime</dd>

						<dt class="col-sm-4 fw-bold">Seats Available</dt>
						<dd class="col-sm-8">@Model.SeatsAvailable</dd>
					</dl>

					<form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-between mt-4">
						<input type="hidden" asp-for="Id" />
						<button type="submit" class="btn btn-danger">Confirm Delete</button>
						<a asp-action="Index" class="btn btn-secondary">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>