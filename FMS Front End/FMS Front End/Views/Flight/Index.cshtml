@model List<FMS_Front_End.Models.Flight>

<div class="container mt-4">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h2>Flights</h2>
		<a asp-action="Create" class="btn btn-primary">Create New Flight</a>
	</div>

	<form asp-action="Search" method="get" class="mb-3 d-flex" role="search">
		<input type="text" name="keyword" class="form-control me-2" placeholder="Search by Source or Destination" />
		<button type="submit" class="btn btn-outline-primary">Search</button>
	</form>

	<table class="table table-striped table-bordered align-middle">
		<thead class="table-dark">
		<tr>
			<th>Flight #</th>
			<th>Source</th>
			<th>Destination</th>
			<th>Departure</th>
			<th>Arrival</th>
			<th>Seats</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var flight in Model)
		{
			<tr>
				<td>@flight.FlightNumber</td>
				<td>@flight.Source</td>
				<td>@flight.Destination</td>
				<td>@flight.DepartureTime.ToString("g")</td>
				<td>@flight.ArrivalTime.ToString("g")</td>
				<td>@flight.SeatsAvailable</td>
				<td>
					<a asp-action="Edit" asp-route-id="@flight.Id" class="btn btn-sm btn-warning me-1">Edit</a>
					<a asp-action="Delete" asp-route-id="@flight.Id" class="btn btn-sm btn-danger">Delete</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
</div>