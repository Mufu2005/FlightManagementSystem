@model FMS_Front_End.Models.Booking

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card border-danger shadow rounded">
				<div class="card-header bg-danger text-white">
					<h4 class="mb-0">Delete Booking</h4>
				</div>
				<div class="card-body">
					<h5 class="mb-3">Are you sure you want to delete this booking?</h5>

					<ul class="list-group mb-4">
						<li class="list-group-item"><strong>Passenger:</strong> @Model.PassengerName</li>
						<li class="list-group-item"><strong>Flight ID:</strong> @Model.FlightId</li>
						<li class="list-group-item"><strong>Seat:</strong> @Model.SeatNumber</li>
					</ul>

					<form asp-action="Delete" method="post" class="d-flex gap-2">
						<input type="hidden" asp-for="Id" />
						<button type="submit" class="btn btn-danger">Confirm Delete</button>
						<a asp-action="Index" class="btn btn-secondary">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>