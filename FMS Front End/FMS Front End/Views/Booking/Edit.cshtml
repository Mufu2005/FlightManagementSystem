@model FMS_Front_End.Models.Booking

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card shadow rounded">
				<div class="card-header bg-success text-white">
					<h4 class="mb-0">Edit Booking</h4>
				</div>
				<div class="card-body">
					<form asp-action="Edit" method="post">
						<input type="hidden" asp-for="Id" />

						<div class="mb-3">
							<label asp-for="FlightId" class="form-label">Flight ID</label>
							<input asp-for="FlightId" class="form-control" />
							<span asp-validation-for="FlightId" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="PassengerName" class="form-label">Passenger Name</label>
							<input asp-for="PassengerName" class="form-control" />
							<span asp-validation-for="PassengerName" class="text-danger"></span>
						</div>

						<div class="mb-3">
							<label asp-for="SeatNumber" class="form-label">Seat Number</label>
							<input asp-for="SeatNumber" class="form-control" />
							<span asp-validation-for="SeatNumber" class="text-danger"></span>
						</div>

						<div class="d-grid">
							<button type="submit" class="btn btn-success">Save Changes</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>